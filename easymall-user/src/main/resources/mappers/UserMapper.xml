<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.tedu.user.dao.UserMapper">
    <select id="selectCountByUserName" resultType="int">
        select count(*) from t_user where
        user_name=#{userName};
    </select>
    <insert id="insertUser">
        insert into t_user (user_id,user_name,user_password,user_email,user_nickname )
        values
        (#{userId},#{userName},#{userPassword},#{userEmail},#{userNickname})
    </insert>
    <!--查询数据登陆是否合法-->
    <select id="selectUserByNameAndPw" resultType="User">
        select * from t_user where user_name=#{userName} and user_password=#{userPassword}
    </select>
</mapper>